%h1 Listing attachments

%table
  %thead
    %tr
      %th Tweet
      %th Media attachment
      %th Index
      %th File
      %th
      %th
      %th

  %tbody
    - @attachments.each do |attachment|
      %tr
        %td= attachment.tweet
        %td= attachment.media_attachment_id
        %td= attachment.index
        %td= attachment.file
        %td= link_to 'Show', attachment
        %td= link_to 'Edit', edit_attachment_path(attachment)
        %td= link_to 'Destroy', attachment, :method => :delete, :data => { :confirm => 'Are you sure?' }

