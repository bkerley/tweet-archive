= form_for @attachment do |f|
  - if @attachment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@attachment.errors.count, "error")} prohibited this attachment from being saved:"
      %ul
        - @attachment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :tweet
    = f.text_field :tweet
  .field
    = f.label :media_attachment_id
    = f.number_field :media_attachment_id
  .field
    = f.label :index
    = f.number_field :index
  .field
    = f.label :file
    = f.text_field :file
  .actions
    = f.submit 'Save'
